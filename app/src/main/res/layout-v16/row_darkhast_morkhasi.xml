<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardBackgroundColor="#eff3f7"
    android:layoutDirection="ltr"
    android:textDirection="rtl"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txOnvanRecevedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="وضعیت:"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage3"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage3" />

            <ImageView
                android:id="@+id/imgIconDate4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage"
                card_view:srcCompat="@drawable/date_icon" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="علت:"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintEnd_toEndOf="@+id/imgIconDate3"
                card_view:layout_constraintTop_toBottomOf="@+id/imgIconDate3" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="تا تاریخ:"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate3"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate3"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate3" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="از تاریخ:"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="تاریخ درخواست:"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate4"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate4"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate4" />

            <TextView
                android:id="@+id/txElat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="00:00"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage3"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage3"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage3" />

            <TextView
                android:id="@+id/txVaziyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="وضعیت"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage" />

            <TextView
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:id="@+id/txDateAz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="##/##/##"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toTopOf="@+id/txOnvanRecevedMessage2"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage4"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage4" />

            <TextView
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:id="@+id/txTarikhDarkhast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="##/##/##"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage6"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage6"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage6" />

            <TextView
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:id="@+id/txDateTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="##/##/##"
                android:textSize="14sp"
                card_view:fontFamily="@font/b_yekan"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage2"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage2"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage2" />

            <ImageView
                android:id="@+id/imgIconDate"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/date_icon" />

            <ImageView
                android:id="@+id/imgIconDate3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                card_view:layout_constraintEnd_toEndOf="@+id/imgIconDate"
                card_view:layout_constraintStart_toStartOf="@+id/imgIconDate"
                card_view:layout_constraintTop_toBottomOf="@+id/imgIconDate"
                card_view:srcCompat="@drawable/date_icon" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>