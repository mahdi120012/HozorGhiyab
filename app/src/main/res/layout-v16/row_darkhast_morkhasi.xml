<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardBackgroundColor="#ffffff"
    android:layoutDirection="ltr"
    android:textDirection="rtl"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clDarkhastMorkhasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/clVaziyatTaeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                card_view:layout_constraintBottom_toBottomOf="@+id/txTarikhDarkhast"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/txTarikhDarkhast">

                <TextView
                    android:id="@+id/txVaziyatTaeid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:padding="3dp"
                    android:text="وضعیت تایید:"
                    android:textSize="14sp"
                    android:visibility="visible"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgVaziyatTaeid"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="visible"
                    card_view:layout_constraintBottom_toBottomOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintEnd_toStartOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/txVaziyatTaeid"
                    card_view:srcCompat="@drawable/dar_entezar_teeid" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/txNameFrestande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="نام فرستنده"
                android:textColor="#3886c7"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="@+id/txAzYaBe"
                card_view:layout_constraintEnd_toStartOf="@+id/txAzYaBe"
                card_view:layout_constraintTop_toTopOf="@+id/txAzYaBe" />

            <TextView
                android:id="@+id/txAzYaBe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="از"
                android:textColor="#3886c7"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgIconDate4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage3"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage3"
                card_view:srcCompat="@drawable/date_icon" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="علت:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="@+id/imgIconDate3"
                card_view:layout_constraintTop_toBottomOf="@+id/imgIconDate3" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="تا تاریخ:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate3"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate3"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate3" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="از تاریخ:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="تاریخ درخواست:"
                android:textColor="#a1aab3"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate4"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate4"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate4" />

            <TextView
                android:id="@+id/txElat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="علت"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage3"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage3"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage3" />

            <TextView
                android:id="@+id/txDateAz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/rmedium"
                android:layoutDirection="ltr"
                android:padding="3dp"
                android:text="##/##/##"
                android:textColor="#000000"
                android:textDirection="ltr"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toTopOf="@+id/txOnvanRecevedMessage2"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage4"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage4" />

            <TextView
                android:id="@+id/txTarikhDarkhast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/rmedium"
                android:layoutDirection="ltr"
                android:padding="3dp"
                android:text="##/##/##"
                android:textColor="#a1aab3"
                android:textDirection="ltr"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage6"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage6"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage6" />

            <TextView
                android:id="@+id/txDateTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/rmedium"
                android:layoutDirection="ltr"
                android:padding="3dp"
                android:text="##/##/##"
                android:textColor="#000000"
                android:textDirection="ltr"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage2"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage2"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage2" />

            <ImageView
                android:id="@+id/imgIconDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txAzYaBe"
                card_view:srcCompat="@drawable/date_icon" />

            <ImageView
                android:id="@+id/imgIconDate3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                card_view:layout_constraintEnd_toEndOf="@+id/imgIconDate"
                card_view:layout_constraintStart_toStartOf="@+id/imgIconDate"
                card_view:layout_constraintTop_toBottomOf="@+id/imgIconDate"
                card_view:srcCompat="@drawable/date_icon" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>