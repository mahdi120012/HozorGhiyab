<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:textDirection="rtl"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txOnvanRecevedMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="عنوان پیام"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:fontFamily="@font/rmedium"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txAzYaBe"
                card_view:lineHeight="19dp" />

            <TextView
                android:id="@+id/txAzYaBe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rmedium"
                android:textSize="15sp"
                android:padding="3dp"
                android:text="از"
                android:textColor="#3886c7"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txNameFrestandeInRecivedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="نام فرستنده"
                android:textColor="#3886c7"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="@+id/txAzYaBe"
                card_view:layout_constraintEnd_toStartOf="@+id/txAzYaBe"
                card_view:layout_constraintTop_toTopOf="@+id/txAzYaBe" />

            <TextView
                android:id="@+id/txMatnRecivedMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rmedium"
                android:textColor="#000000"
                android:textSize="15sp"
                android:padding="3dp"
                android:text="متن پیام"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage"
                card_view:lineHeight="19dp" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clVaziyatTaeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                card_view:layout_constraintStart_toStartOf="@+id/txMatnRecivedMessage"
                card_view:layout_constraintTop_toBottomOf="@+id/txMatnRecivedMessage">

                <TextView
                    android:id="@+id/txVaziyatTaeid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:padding="3dp"
                    android:text="وضعیت تایید:"
                    android:textSize="14sp"
                    android:visibility="visible"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgVaziyatTaeid"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="visible"
                    card_view:layout_constraintBottom_toBottomOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintEnd_toStartOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/txVaziyatTaeid"
                    card_view:srcCompat="@drawable/dar_entezar_teeid" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/txDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="##/##/##"
                android:textColor="#a1aab3"
                android:textSize="14sp"
                card_view:fontFamily="@font/broya"
                card_view:layout_constraintEnd_toStartOf="@+id/imgReadOrNotRead"
                card_view:layout_constraintTop_toBottomOf="@+id/txMatnRecivedMessage" />

            <ImageView
                android:id="@+id/imgReadOrNotRead"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                card_view:layout_constraintEnd_toEndOf="@+id/txMatnRecivedMessage"
                card_view:layout_constraintTop_toBottomOf="@+id/txMatnRecivedMessage"
                card_view:srcCompat="@drawable/not_read" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>