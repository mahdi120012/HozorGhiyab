<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardBackgroundColor="#ffffff"
    android:layoutDirection="ltr"
    android:textDirection="rtl"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txOnvanRecevedMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/sahelbold"
                android:padding="3dp"
                android:text="عنوان پیام"
                android:textSize="17sp"
                card_view:fontFamily="@font/broya"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txMatnRecivedMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="متن پیام"
                android:textSize="17sp"
                card_view:fontFamily="@font/broya"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage" />

            <TextView
                android:id="@+id/txNameFrestandeInRecivedMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="نام فرستنده"
                android:textSize="14sp"
                card_view:fontFamily="@font/broya"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconErsalKonandeMessage"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconErsalKonandeMessage"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconErsalKonandeMessage" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clVaziyatTaeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                card_view:layout_constraintStart_toStartOf="@+id/txDate"
                card_view:layout_constraintTop_toBottomOf="@+id/txDate">

                <TextView
                    android:id="@+id/txVaziyatTaeid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adobearabicbold"
                    android:padding="3dp"
                    android:text="وضعیت تایید:"
                    android:textSize="14sp"
                    android:visibility="visible"
                    card_view:fontFamily="@font/broya"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgVaziyatTaeid"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="visible"
                    card_view:layout_constraintBottom_toBottomOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintEnd_toStartOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/txVaziyatTaeid"
                    card_view:srcCompat="@drawable/dar_entezar_teeid" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/txDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/adobearabicbold"
                android:padding="3dp"
                android:text="##/##/##"
                android:textSize="14sp"
                card_view:fontFamily="@font/broya"
                card_view:layout_constraintBottom_toBottomOf="@+id/txNameFrestandeInRecivedMessage"
                card_view:layout_constraintStart_toStartOf="@+id/txMatnRecivedMessage"
                card_view:layout_constraintTop_toTopOf="@+id/txNameFrestandeInRecivedMessage" />

            <ImageView
                android:id="@+id/imgIconErsalKonandeMessage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:visibility="visible"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txMatnRecivedMessage"
                card_view:srcCompat="@drawable/icon_ersal_konandemessage" />

            <ImageView
                android:id="@+id/imgReadOrNotRead"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txNameFrestandeInRecivedMessage"
                card_view:srcCompat="@drawable/not_read" />

            <ImageView
                android:id="@+id/imgIconDate"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txNameFrestandeInRecivedMessage"
                card_view:layout_constraintStart_toEndOf="@+id/txDate"
                card_view:layout_constraintTop_toTopOf="@+id/txNameFrestandeInRecivedMessage"
                card_view:layout_constraintVertical_bias="0.363"
                card_view:srcCompat="@drawable/date_icon" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>